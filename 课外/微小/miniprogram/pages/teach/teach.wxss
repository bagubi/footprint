/* 列表容器整体样式 */
.list-container {
  padding: 20rpx;
  background-color: #f9f9f9;
}

/* 每个列表项样式 */
.list-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  margin-bottom: 20rpx;
  /* background-color: white; */
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 原始 index 样式 */
.original-index {
  font-size: 24rpx;
  color: #999;
  margin-right: 20rpx;
}

/* 自定义 ind 样式 */
.custom-index {
  font-size: 24rpx;
  color: #666;
  margin-right: 20rpx;
}

/* item name 样式 */
.item-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-right: auto;
}

/* detail 内容样式 */
.item-detail {
  font-size: 28rpx;
  color: #07c160; /* 微信绿色 */
}